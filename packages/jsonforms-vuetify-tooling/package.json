{
  "name": "jsonforms-vuetify-tooling",
  "displayName": "JSONForms Vuetify Tooling",
  "author": "Krasimir Chobantonov",
  "publisher": "kchobantonov",
  "description": "VSCode extension for JSON Forms tooling using Vue2 Vuetify renderer set",
  "version": "0.0.2",
  "preview": true,
  "repository": "https://github.com/kchobantonov/jsonforms-vuetify-webcomponent",
  "bugs": "https://github.com/kchobantonov/jsonforms-vuetify-webcomponent/issues",
  "license": "MIT",
  "engines": {
    "vscode": "^1.76.0"
  },
  "keywords": [
    "vue",
    "vue2",
    "vue 2",
    "vuetify",
    "form",
    "forms",
    "json",
    "jsonforms",
    "frontend",
    "generator",
    "input",
    "renderengine",
    "jsonschema",
    "schema",
    "uischema",
    "layout",
    "customization",
    "template"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "files": [
    "dist"
  ],
  "contributes": {
    "commands": [
      {
        "command": "jsonforms-vuetify-tooling.showPreview",
        "title": "JSONForms Vuetify: Show Preview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == json",
          "command": "jsonforms-vuetify-tooling.showPreview",
          "group": "jsonforms"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .json",
          "command": "jsonforms-vuetify-tooling.showPreview",
          "group": "jsonforms"
        }
      ],
      "editor/title/context": [
        {
          "when": "resourceLangId == json",
          "command": "jsonforms-vuetify-tooling.showPreview",
          "group": "jsonforms"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "JSONForms Vuetify Tooling",
      "order": 20,
      "properties": {
        "jsonforms-vuetify-tooling.showPreview.config": {
          "type": "object",
          "default": {
            "restrict": true,
            "trim": false,
            "showUnfocusedDescription": false,
            "hideRequiredAsterisk": true
          },
          "description": "JSONForms config object. Used when config.json file is not next to the schema.json file",
          "scope": "resource"
        },
        "jsonforms-vuetify-tooling.showPreview.preset": {
          "type": "object",
          "default": {
            "theme": {
              "dark": false
            }
          },
          "description": "JSONForms Vuetify Default Preset object. Used when preset.json file is not next to the schema.json file",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vsix": "npm i && vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@kchobantonov/jsonforms-vuetify-webcomponent": "3.1.0-alpha.0",
    "@vscode/test-electron": "^2.2.3",
    "@vscode/vsce": "^2.18.0",
    "copy-webpack-plugin": "^6.4.1",
    "eslint": "^6.7.2",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^8.4.0",
    "typescript": "^4.7.3",
    "webpack": "^4.0.0",
    "webpack-cli": "^4.0.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "util": "^0.12.5"
  }
}
