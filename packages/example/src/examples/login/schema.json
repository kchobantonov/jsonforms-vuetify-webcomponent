{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "description": "Login username"
    },
    "password": {
      "type": "string",
      "format": "password",
      "description": "Login password"
    }
  },
  "required": ["username", "password"],
  "errorMessage": {
    "required": {
      "username": "username is required",
      "password": "password.required"
    }
  }
}
