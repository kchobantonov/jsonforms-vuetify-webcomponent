{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "label": "JavaScript (using light theme)",
      "scope": "#/properties/javascript",
      "options": {
        "format": "code",
        "language": "javascript",
        "vuetify": {
          "v-monaco-editor": {
            "theme": "light",
            "auto-grow": true,
            "rows": 2,
            "maxRows": 20,
            "prepend-icon": "mdi-script-text",
            "options": {
              "minimap": { "enabled": false }
            },
            "noResize": true,
            "initActions": ["editor.action.formatDocument"]
          }
        }
      }
    },
    {
      "type": "Control",
      "label": "HTML",
      "scope": "#/properties/html",
      "options": {
        "format": "code",
        "language": "html",
        "vuetify": {
          "v-monaco-editor": {
            "rows": 20,
            "options": {
              "minimap": { "enabled": true }
            },
            "initActions": ["editor.action.formatDocument"]
          }
        }
      }
    },
    {
      "type": "Control",
      "label": "Select Language Code",
      "scope": "#/properties/language"
    },
    {
      "type": "Control",
      "label": "Code",
      "scope": "#/properties/code",
      "options": {
        "format": "code",
        ":language": "language",
        "vuetify": {
          "v-monaco-editor": {
            "rows": 10,
            "options": {
              "minimap": { "enabled": false }
            },
            "initActions": ["editor.action.formatDocument"]
          }
        }
      }
    }
  ]
}
