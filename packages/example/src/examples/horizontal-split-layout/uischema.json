{
  "type": "SplitLayout",
  "elements": [
    {
      "type": "VerticalLayout",
      "elements": [
        {
          "type": "Control",
          "label": "Name",
          "scope": "#/properties/name"
        },
        {
          "type": "Control",
          "label": "Birth Date",
          "scope": "#/properties/birthDate"
        }
      ]
    },
    {
      "type": "VerticalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/nationality"
        },
        {
          "type": "Control",
          "scope": "#/properties/occupation"
        }
      ]
    }
  ],
  "options": {
    "horizontal": true,
    "vuetify": {
      "v-splitpanes": {},
      "v-pane": [{ "min-size": 20 }, { "min-size": 20 }]
    }
  }
}
